generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Lider {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String   @unique
  cpf            String   @unique
  phoneNumber    String
  organization  String
  cnpj         String
  area           String
  state          String
  address          String?
  notes            String?
  password       String
  createdAt      DateTime?  @default(now())
  UpdatedAt      DateTime?  @default(now())
  termos          Boolean
  @@map("Lider")
}


